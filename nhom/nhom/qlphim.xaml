<Window x:Class="nhom.qlphim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nhom"
        mc:Ignorable="d"
        Title="Quản lý phim" Height="500" Width="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <GroupBox Header="Danh sách phim" Grid.Row="0" Grid.Column="0" Margin="5" FontWeight="Bold">
            <DataGrid x:Name="dsphim" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã phim" Width="80" Binding="{Binding MovieId}" />
                    <DataGridTextColumn Header="Tên phim" Width="*" Binding="{Binding Title}" />
                    <DataGridTextColumn Header="Thể loại" Width="100" Binding="{Binding Genre}" />
                    <DataGridTextColumn Header="Thời lượng" Width="80" Binding="{Binding Duration}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header="Thông tin phim" Grid.Row="0" Grid.Column="1" Margin="5" FontWeight="Bold">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <Label Content="Tên phim"/>
                    <TextBox x:Name="txttenphim" Margin="0,0,0,5"/>

                    <Label Content="Thời lượng (phút)"/>
                    <TextBox x:Name="txtthoiluong" Margin="0,0,0,5"/>

                    <Label Content="Thể loại"/>
                    <ComboBox x:Name="cbtheloai" Height="25" Margin="0,0,0,5">
                        <ComboBoxItem Content="Hành động"/>
                        <ComboBoxItem Content="Hài"/>
                        <ComboBoxItem Content="Tình cảm"/>
                        <ComboBoxItem Content="Kinh dị"/>
                        <ComboBoxItem Content="Hoạt hình"/>
                    </ComboBox>

                    <Label Content="Đạo diễn"/>
                    <TextBox x:Name="txtdaodien" Margin="0,0,0,5"/>

                    <Label Content="Diễn viên"/>
                    <TextBox x:Name="txtdienvien" Height="50" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,5"/>

                    <Label Content="Tóm tắt"/>
                    <TextBox x:Name="txttomtat" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Thêm" Width="90" Margin="5" Padding="5"/>
            <Button Content="Sửa" Width="90" Margin="5" Padding="5"/>
            <Button Content="Xóa" Width="90" Margin="5" Padding="5"/>
            <Button Content="Lưu" Width="90" Margin="5" Padding="5"/>
            <Button Content="Hủy" Width="90" Margin="5" Padding="5"/>
        </StackPanel>

    </Grid>
</Window>