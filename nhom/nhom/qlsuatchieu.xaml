<Window x:Class="nhom.qlsuatchieu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Suất chiếu" Height="680" Width="1100" Background="#F4F6F8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="🕒" FontSize="22" Margin="0,0,10,0"/>
                <TextBlock Text="QUẢN LÝ SUẤT CHIẾU" FontWeight="Bold" FontSize="18" Foreground="#2C3E50"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="White" Margin="0,0,1,0">
                <TextBlock Text="LỌC THEO PHÒNG" Margin="20,20,0,10" Foreground="#7F8C8D" FontSize="12" FontWeight="Bold"/>
                <ListBox x:Name="lst_LocPhong" BorderThickness="0" Background="Transparent" SelectedIndex="0" SelectionChanged="lst_LocPhong_SelectionChanged">
                    <ListBoxItem Content="Tất cả phòng" Padding="20,12" FontSize="14"/>
                    <ListBoxItem Content="Rạp 1" Padding="20,12" FontSize="14"/>
                    <ListBoxItem Content="Rạp 2" Padding="20,12" FontSize="14"/>
                </ListBox>
            </StackPanel>

            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <Border BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Background="White" Width="300">
                        <TextBox x:Name="txt_tim_kiem" Padding="10,8" BorderThickness="0" Background="Transparent"
                                 Text="🔍 Tìm kiếm suất chiếu..." Foreground="Gray"
                                 GotFocus="txt_tim_kiem_GotFocus" LostFocus="txt_tim_kiem_LostFocus"
                                 VerticalAlignment="Center" FontSize="14"/>
                    </Border>

                    <Button x:Name="btn_hien_form_them" Content="+ TẠO SUẤT CHIẾU MỚI" 
                            Background="#27AE60" Foreground="White" FontWeight="Bold" FontSize="13"
                            Padding="20,8" Margin="15,0,0,0" BorderThickness="0"
                            Click="btn_hien_form_them_Click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <Border x:Name="pnl_NhapLieu" Grid.Row="1" Visibility="Collapsed" Background="#E8F8F5" 
                        BorderBrush="#1ABC9C" BorderThickness="1" CornerRadius="5" Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Khu vực tạo suất chiếu (Nhấn Enter để lưu)" Foreground="#16A085" FontSize="12" Margin="0,0,0,10" FontStyle="Italic"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="cmb_Phim" Grid.Column="0" Padding="8" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cmb_Phong" Grid.Column="1" Padding="8" Margin="0,0,10,0"/>
                            <DatePicker x:Name="dp_NgayChieu" Grid.Column="2" Padding="5" Margin="0,0,10,0"/>
                            <TextBox x:Name="txt_GioChieu" Grid.Column="3" Padding="8" Margin="0,0,10,0" ToolTip="Nhập giờ (VD: 19:30)" Text="19:00"/>
                            <TextBox x:Name="txt_GiaVe" Grid.Column="4" Padding="8" Margin="0,0,10,0" ToolTip="Giá vé" Text="100000" KeyDown="FastEntry_KeyDown"/>

                            <Button x:Name="btn_LuuNhanh" Grid.Column="5" Content="✔ LƯU" Background="#2980B9" Foreground="White" 
                                    BorderThickness="0" Padding="15,8" Margin="0,0,10,0" Click="btn_LuuNhanh_Click" Cursor="Hand"/>

                            <Button Grid.Column="6" Content="✖ ĐÓNG" Background="#E74C3C" Foreground="White" 
                                    BorderThickness="0" Padding="15,8" Click="btn_HuyNhap_Click" Cursor="Hand"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <DataGrid Grid.Row="2" x:Name="dtg_suat_chieu" 
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                          Background="White" BorderBrush="#E0E0E0" RowHeight="45"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F0F0F0"
                          SelectionMode="Single">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#ECF0F1"/>
                            <Setter Property="Height" Value="45"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="15,0"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#BDC3C7"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tên phim" Binding="{Binding phim.ten_phim}" Width="2*"/>
                        <DataGridTextColumn Header="Phòng chiếu" Binding="{Binding phongchieu.ten_phong}" Width="*"/>
                        <DataGridTextColumn Header="Ngày chiếu" Binding="{Binding ngay_chieu, StringFormat=\{0:dd/MM/yyyy\}}" Width="*"/>
                        <DataGridTextColumn Header="Giờ chiếu" Binding="{Binding gio_bat_dau}" Width="*"/>
                        <DataGridTextColumn Header="Giá vé" Binding="{Binding gia_ve_co_ban, StringFormat={}{0:N0}}" Width="*"/>

                        <DataGridTemplateColumn Header="Thao tác" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑 Xóa" Foreground="White" Background="#E74C3C" BorderThickness="0" 
                                            Padding="5,2" Click="btn_xoa_Click" Cursor="Hand"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StatusBar Grid.Row="3" Background="Transparent" Margin="0,10,0,0">
                    <TextBlock x:Name="txt_ket_qua" Text="Sẵn sàng quản lý lịch chiếu." Foreground="Gray" FontWeight="Medium"/>
                </StatusBar>
            </Grid>
        </Grid>
    </Grid>
</Window>