<Window x:Class="nhom.qlrapphim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nhom"
        mc:Ignorable="d"
       Title="Quản Lý Rạp Chiếu Phim" Height="500" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Danh mục quản lý" Grid.Column="0" Margin="0,0,10,0" Padding="10">
            <StackPanel>
                <Button Content="Quản lý phim" Margin="0,0,0,5" Height="35" Background="Transparent"/>
                <Button Content="Quản lý suất chiếu" Margin="0,0,0,5" Height="35" Background="Transparent"/>
                <Button Content="Quản lý sản phẩm" Margin="0,0,0,5" Height="35" Background="Transparent"/>
                <Button Content="Quản lý nhân sự" Margin="0,0,0,5" Height="35" Background="Transparent"/>
                <Button Content="Quản lý khách hàng" Margin="0,0,0,5" Height="35" Background="Transparent"/>
                <Button Content="Thống kê" Margin="0,0,0,5" Height="35" Background="Transparent"/>

                <Separator Margin="0,10"/>

                <Button Content="Đăng xuất" Height="35" Background="Transparent"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Nội dung chi tiết" Grid.Column="1" Padding="5">
            <Grid x:Name="MainDisplayRegion">
                <TextBlock Text="Chọn một chức năng bên trái để bắt đầu" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Foreground="Gray"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
