<Window x:Class="nhom.dangnhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nhom"
        mc:Ignorable="d"
        Title="Lotte Cinema Basic" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">


            <Separator/>

            <TextBlock Text="NHOM6 CINEMA " 
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="Black" 
                       HorizontalAlignment="Center" 
                       Margin="0,15"/>

            <Separator/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="SHOP QUÀ TẶNG" Padding="10,5" Margin="5,0" Background="Transparent" BorderThickness="0" FontWeight="Bold"/>
                <TextBlock Text="|" VerticalAlignment="Center"/>
                <Button Content="MUA VÉ" Padding="10,5" Margin="5,0" Background="Transparent" BorderThickness="0" FontWeight="Bold"/>
                <TextBlock Text="|" VerticalAlignment="Center"/>
                <Button Content="PHIM" Padding="10,5" Margin="5,0" Background="Transparent" BorderThickness="0" FontWeight="Bold"/>
                <TextBlock Text="|" VerticalAlignment="Center"/>
                <TextBlock Text="|" VerticalAlignment="Center"/>
                <Button Content="KHUYẾN MÃI" Padding="10,5" Margin="5,0" Background="Transparent" BorderThickness="0" FontWeight="Bold"/>
            </StackPanel>

        </StackPanel>


        <StackPanel Grid.Row="1" Margin="5" VerticalAlignment="Center" Width="300">

            <TextBlock Text="ĐĂNG NHẬP HỆ THỐNG" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <Label Content="Email:"/>
            <TextBox Height="25" Margin="0,0,0,10"/>

            <Label Content="Mật khẩu:"/>
            <PasswordBox Height="25" Margin="0,0,0,10"/>

            <Button Content="Đăng nhập" Height="30" Margin="0,10,0,10"/>

            <TextBlock Text="Quên mật khẩu?" 
                       HorizontalAlignment="Right" 
                       TextDecorations="Underline" 
                       Margin="0,0,0,15"/>

            <Separator Margin="0,0,0,10"/>
            <TextBlock Text="Bạn chưa có tài khoản?" HorizontalAlignment="Center"/>
            <Button Content="Đăng ký ngay" Height="30" Margin="0,5,0,0"/>

        </StackPanel>
    </Grid>
</Window>
